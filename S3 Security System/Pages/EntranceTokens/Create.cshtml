@page
@model S3_Security_System.Pages.EntranceTokens.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>EntranceToken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EntranceToken.DateObtained" class="control-label"></label>
                <input asp-for="EntranceToken.DateObtained" class="form-control" />
                <span asp-validation-for="EntranceToken.DateObtained" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntranceToken.security_systemId" class="control-label"></label>
                <select asp-for="EntranceToken.security_systemId" class ="form-control" asp-items="ViewBag.security_systemId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EntranceToken.AccessGranted" /> @Html.DisplayNameFor(model => model.EntranceToken.AccessGranted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EntranceToken.TimeOfEntry" class="control-label"></label>
                <input asp-for="EntranceToken.TimeOfEntry" class="form-control" />
                <span asp-validation-for="EntranceToken.TimeOfEntry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntranceToken.TimeOfExit" class="control-label"></label>
                <input asp-for="EntranceToken.TimeOfExit" class="form-control" />
                <span asp-validation-for="EntranceToken.TimeOfExit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
